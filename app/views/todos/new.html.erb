<h1> this is the new page </h1>


<% if @todo.errors.any? %>
    <h2> The following errors</h2>
    <ul> 
        <% @todo.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
    </ul>
<% end %>


<%= form_for @todo do |t| %>
    <p> 
        <%= t.label :name %> <br>
        <%= t.text_field :name%>
    </p>
    <p> 
        <%= t.label :description %>  <br>
        <%= t.text_area :description %>
    </p>

    <p>
    <%= t.submit %> 
    </p>
<% end %>